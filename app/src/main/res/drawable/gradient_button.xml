<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#3a7e00"
                android:endColor="#850000" />
            <stroke
                android:width="1dp"
                android:color="#969696" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#74ff00"
                android:endColor="#f70000" />
            <stroke
                android:width="1dp"
                android:color="#969696" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
     </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#63d701"
                android:endColor="#bd0000" />
            <stroke
                android:width="1dp"
                android:color="#969696" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>